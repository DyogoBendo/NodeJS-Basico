<h2>Lista de postagens</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Adicionar nova postagem</button> </a>

{{#each postagens}}
    <div class="card mt-3">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Data: {{data}}</small>
            <br>
            <small>Categoria: {{categoria.nome}}</small>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success">Editar postagem</button></a>
            <a href="/admin/postagens/delet/{{_id}}"><button class="btn btn-danger">Apagar postagem</button></a>
        </div>
    </div>
{{else}}
    <p>Nenhuma postagem</p>
{{/each}}